					"name": "Register User (Admin Only)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Debug: Verificar token de admin antes de la solicitud",
									"const token = pm.environment.get('access_token');",
									"console.log('Admin token being used:', token ? token.substring(0, 50) + '...' : 'NO TOKEN');",
									"if (!token) {",
									"    console.log('WARNING: No access token found. Please login as admin first.');",
									"}"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 403) {",
									"    console.log('403 Forbidden - User does not have admin privileges');",
									"    console.log('Response:', pm.response.text());",
									"} else if (pm.response.code === 401) {",
									"    console.log('401 Unauthorized - Token may be invalid or expired');",
									"    console.log('Response:', pm.response.text());",
									"} else if (pm.response.code === 400) {",
									"    console.log('400 Bad Request - Invalid data or user already exists');",
									"    console.log('Response:', pm.response.text());",
									"} else if (pm.response.code === 201) {",
									"    console.log('User registered successfully');",
									"    const response = pm.response.json();",
									"    console.log('New user ID:', response.id);",
									"    console.log('Username:', response.username);",
									"    console.log('Role:', response.role);",
									"    pm.test('User registration successful', function () {",
									"        pm.response.to.have.status(201);",
									"    });",
									"    pm.test('Response contains user data', function () {",
									"        pm.expect(response).to.have.property('id');",
									"        pm.expect(response).to.have.property('username');",
									"        pm.expect(response).to.have.property('email');",
									"        pm.expect(response).to.have.property('role');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
